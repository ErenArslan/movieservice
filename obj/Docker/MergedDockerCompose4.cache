services:
  identity.server:
    build:
      context: C:\Users\SingleLanguage\source\repos\AtrosMovie
      dockerfile: IdentityServer/IdentityService/Dockerfile
    image: identityserver
  mongodb-movieservice:
    container_name: mongodb-movieservice
    image: mongo:latest
    ports:
    - published: 27017
      target: 27017
    volumes:
    - mongodb-movieservice:/data/db:rw
  movieservice.api:
    build:
      context: C:\Users\SingleLanguage\source\repos\AtrosMovie
      dockerfile: MovieService/MovieService.Api/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: movieserviceapi
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\SingleLanguage\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\SingleLanguage\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  rabbitmq:
    container_name: rabbitmq
    image: rabbitmq:latest
    ports:
    - published: 15672
      target: 15672
    volumes:
    - mongodb-movieservice:/var/lib/rabbitmq/mnesia:rw
  redis-movieservice:
    container_name: redis-movieservice
    image: redis:alpine
    ports:
    - published: 6379
      target: 6379
    volumes:
    - C:\Users\SingleLanguage\source\repos\AtrosMovie\data\redis-data:/var/lib/redis:rw
version: '3.4'
volumes:
  mongodb-movieservice:
    external: false
  rabbitmq-movieservice:
    external: false